<div class="container">
    <div class="row">

        <h3>フォロワー</h3>
        
        <table class="table">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @user.follower_user.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image-icon.jpg" %></td>
                        <td><%= user.name %></td>
                        <td>
                            <% unless user == current_user %>
                                <% if current_user.following?(user) %>
                                    <%= link_to "フォローを外す", unfollow_path(user.id), method: :post %>
                                <% else %>
                                    <%= link_to "フォローする", follow_path(user.id), method: :post %>
                                <% end %>
                            <% end %>
                        </td>
                        <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>